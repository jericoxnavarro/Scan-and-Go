<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/primary"
    android:backgroundTintMode="multiply"
    android:alpha="0.88"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
            <ImageView
                android:src="@drawable/ic_logs"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:id="@+id/logo"

                />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/logo"
            android:layout_margin="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="SCAN &amp; GO"
            android:textColor="#7de89d"
            android:textSize="40dp"
            android:id="@+id/logo_name"/>

        <TextView
            android:id="@+id/logo_subname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/logo_name"
            android:layout_marginTop="-1dp"
            android:fontFamily="@font/montserrat"
            android:text="LOG IN"
            android:textColor="#7de89d"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/logo_subname"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:hint="ID"
            android:textColor="#7de89d"
            android:textSize="20dp"
            android:id="@+id/login_id"
            android:inputType="text"
            />
<Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:theme="@style/Button.Color"
        android:layout_below="@id/login_id"
        android:text="Log In"
        tools:ignore="MissingConstraints"/>

    </RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>